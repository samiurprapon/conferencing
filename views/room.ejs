        #video-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, 500px);
            grid-auto-rows: 500px;
            grid-gap: 10px 10px;

        }

        video {
            width: 100%;
            height: 100%;
            object-fit: cover;

            /*Mirror code starts*/
            transform: rotateY(180deg);
            -webkit-transform: rotateY(180deg);
